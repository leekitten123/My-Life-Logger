<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    android:orientation="vertical"
    tools:context="com.example.hyojin.mylifelogger.ManageGoalFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#4682B4"
        android:text="목표 관리하기"
        android:textSize="15dp"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="목표 기간"
            android:textColor="#000000"
            android:textSize="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/text_FromTime"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text=" ~ "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/text_ToTime"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="목표 설정"
                android:textColor="#000000"
                android:textSize="25dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_SettingGoals"
                android:text="업데이트"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="373dp"
        android:layout_margin="1dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="달성률 확인"
            android:textColor="#000000"
            android:textSize="25dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#000000">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="항목"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:background="#4682B4"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="목표 시간"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:background="#4682B4"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="달성 시간"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:background="#4682B4"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="달성률"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:background="#4682B4"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#000000">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="게임"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:background="#4682B4"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="#FFFFFF"
                    android:id="@+id/text_game1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="#FFFFFF"
                    android:id="@+id/text_game2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="#FFFFFF"
                    android:id="@+id/text_game3"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#000000">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="식사"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:background="#4682B4"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="#FFFFFF"
                    android:id="@+id/text_eat1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="#FFFFFF"
                    android:id="@+id/text_eat2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="#FFFFFF"
                    android:id="@+id/text_eat3"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#000000">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="이동"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:background="#4682B4"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="#FFFFFF"
                    android:id="@+id/text_move1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="#FFFFFF"
                    android:id="@+id/text_move2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="#FFFFFF"
                    android:id="@+id/text_move3"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#000000">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="공부"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:background="#4682B4"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="#FFFFFF"
                    android:id="@+id/text_study1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="#FFFFFF"
                    android:id="@+id/text_study2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="#FFFFFF"
                    android:id="@+id/text_study3"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#000000">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="일"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:background="#4682B4"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="#FFFFFF"
                    android:id="@+id/text_work1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="#FFFFFF"
                    android:id="@+id/text_work2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="#FFFFFF"
                    android:id="@+id/text_work3"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:background="#000000">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="그외"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:background="#4682B4"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="#FFFFFF"
                    android:id="@+id/text_other1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="#FFFFFF"
                    android:id="@+id/text_other2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="#FFFFFF"
                    android:id="@+id/text_other3"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="#4682B4"
        android:text="확인"
        android:textColor="#FFFFFF"
        android:id="@+id/btn_WatchGoal"/>
</LinearLayout>
